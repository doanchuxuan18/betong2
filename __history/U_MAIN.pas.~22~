procedure TForm1.btn_hoattaiClick(Sender: TObject);
begin
	if (cbb_sodo.Text = 'Sơ đồ 1') then
	begin
		dulieuvao;
		hoattai(l1, l2, b, h, b1, h1, b2, h2, b3, h3, gs, ghl, gm, gtx1, gtx2,
